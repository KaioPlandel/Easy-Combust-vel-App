<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.plandel.easyCombustivel"
    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EazyCombustivel">
        <activity
            android:name="com.plandel.easyCombustivel.view.RelatorioActivity"
            android:exported="false"
            android:parentActivityName=".view.MainActivity"
            android:launchMode="singleTop"
            />
        <activity
            android:name="com.plandel.easyCombustivel.view.DespesaActivity"
            android:exported="false"
            android:parentActivityName="com.plandel.easyCombustivel.view.MainActivity"
            />
        <activity
            android:name="com.plandel.easyCombustivel.view.ReceitaActivity"
            android:exported="false"
            android:parentActivityName="com.plandel.easyCombustivel.view.MainActivity"
            />
        <activity
            android:name="com.plandel.easyCombustivel.view.CustoXTrajetoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.plandel.easyCombustivel.view.QuantidadeLitrosActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.plandel.easyCombustivel.view.AlcoolXGasolinaActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.plandel.easyCombustivel.view.MediaKmLitroActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.plandel.easyCombustivel.view.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>